{% extends "IntraForumBundle::layout.html.twig" %}

{% block title %}
  Ajouter un thread - {{ parent() }}
{% endblock %}

{% block intramain_body %}
	
	<form role="form" action={{ path('intra_forum_ajouter_thread') }} method="POST" 
	onsubmit="return (this._sujet.value.length > 0 && this._content.value.length > 0)">
	  <div class="form-group">
	    <label for="sujet">Sujet</label>
	    <input type="text" class="form-control" id="sujet" name="_sujet" placeholder="Entrez votre sujet">
	  </div>
	  <div class="form-group">
	  	<label for="_content">Contenu</label>
	  	<textarea class="form-control" rows="6" id="_content" name="_content"></textarea>
	  </div>
	  <input type="hidden" name="_id_categorie" value="{{ categorie.getId() }}">
	  <button type="submit" class="btn btn-default">Creer</button>
	</form>

{% endblock %}