{% extends "IntraModuleBundle::layout.html.twig" %}

{% block title %}
  Bareme - {{ parent() }}
{% endblock %}



{% block intramain_body %}

<h3>Bareme - {{ bareme.name }}</h3>	
<form role="form" method="post">
	{% for critere in bareme.criteres %}
	<div class="panel panel-info">
		<div class="panel-heading">
			<h5 class="panel-title"> sujet : {{ critere.titre }}</h5>
		</div>
		<div class="panel-body">
			<p> desciption : {{ critere.description }}</p>
			
				<div class="row">
					{% for point in critere.points %}		
					<div class="col-xs-2">
						<input type="radio" name="radio{{ critere.id }}" value="{{ point.number }}" {% if loop.first %} checked {% endif %}> {{ point.number }}<br>
					</div>
					{% endfor %}
				</div>
		</div>
		<div class="panel-footer">
				<div class="form-group">
			  	<label for="contenu">Message</label>
			  	<textarea class="form-control" rows="6" id="contenu" name="_content"></textarea>
			  </div>
			
		</div>
	</div>
	{% endfor %}
</form>
	



