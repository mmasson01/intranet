<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>Login</title>
  <meta name="description" content="slick Login">
  <meta name="author" content="Webdesigntuts+">

  {% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('login/style.css') }}" />
  <link rel="icon" type="image/png" href="http://www.roquesenmusique.com/wp-content/uploads/sites/10/2014/01/markers/markers-42.png" />
  {% endblock %}

  {% block javascripts %}
  <script type="text/javascript" src="{{ asset('http://code.jquery.com/jquery-latest.min.js') }}"></script>
  <script src="http://www.modernizr.com/downloads/modernizr-latest.js"></script>
  <script type="text/javascript" src="{{ asset('login/placeholder.js') }}"></script>
  {% endblock %}

</head>

<body>

  <div id="slick-login">



    <form role="form" action="{{ path('fos_user_security_check') }}" method="post">
      <h2 id="login-heading">INTRA 42</h2>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

      {% if error %}
      <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
      {% endif %}
      <div id="login-body">
        <label for="username" class="col-sm-2 control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <input type="text" class="form-control" id="username" name="_username" placeholder="Login" required="required" />

        <label for="password" class="col-sm-2 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de Passe" required="required" />

        
        <label for="remember_me" class="checkbox">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
          <input type="checkbox" id="remember_me" name="_remember_me" checked />
        </label>
      </div>
      <div id="login-footer">


        <input type="submit" id="_submit" name="_submit" class="btn btn-default" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}">
      </div>

    </form>
  </div>
</body>
</html>